@model decimal

@{
    ViewData["Title"] = "Total Inventory Value";
}

<div class="container">
    <h1>Valore Totale dell'Inventario</h1>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Torna alla Gestione dell'Inventario</a>
    </div>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Valore attuale dell'Inventario</h2>
            <div class="display-4 text-primary mb-3">
                @Model.ToString("C")
            </div>
            <p class="card-text text-muted">
                Valore totale di tutti i prodotti in tutti i negozi.
            </p>
        </div>
    </div>

    @if (Model == 0)
    {
        <div class="alert alert-warning mt-3">
            <i class="bi bi-exclamation-triangle"></i>
            Avviso: Il valore totale dell'inventario è zero. Questo può indicare che:
            <ul>
                <li>Tutti i negozi hanno esaurito tutti i prodotti</li>
                <li>Nessun prodotto è stato aggiunto all'inventario</li>
                <li>tutti i prezzi dei prodotti sono impostati a 0</li>
            </ul>
        </div>
    }
</div>
