@model decimal

@{
    ViewData["Title"] = "Total Inventory Value";
}

<div class="container">
    <h1>Total Inventory Value</h1>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Inventory Management</a>
    </div>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Current Inventory Value</h2>
            <div class="display-4 text-primary mb-3">
                @Model.ToString("C")
            </div>
            <p class="card-text text-muted">
                Total value of all products across all stores
            </p>
        </div>
    </div>

    @if (Model == 0)
    {
        <div class="alert alert-warning mt-3">
            <i class="bi bi-exclamation-triangle"></i>
            Warning: The total inventory value is zero. This might indicate:
            <ul>
                <li>All stores are out of stock</li>
                <li>No products have been added to inventory</li>
                <li>All product prices are set to zero</li>
            </ul>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any additional JavaScript for analytics or charts here
    </script>
}
