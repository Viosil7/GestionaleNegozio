@model GestionaleNegozio.Models.Staff

@{
    ViewData["Title"] = "Staff Details";
}

<h1>Dettagli Staff</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ruolo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ruolo)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Manager"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifica</a>
        <span>|</span>
    }
    <a asp-action="Index" class="btn btn-secondary">Torna all'elenco</a>
</div>
