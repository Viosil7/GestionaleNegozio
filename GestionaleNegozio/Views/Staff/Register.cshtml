@model GestionaleNegozio.Models.Staff

<h2>Register New Staff Member</h2>

<form asp-action="Register">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Passw">Password</label>
        <input asp-for="Passw" type="password" class="form-control" />
        <span asp-validation-for="Passw" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ruolo">Role</label>
        <select asp-for="Ruolo" class="form-control">
            <option value="Manager">Manager</option>
            <option value="Employee">Employee</option>
        </select>
        <span asp-validation-for="Ruolo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
