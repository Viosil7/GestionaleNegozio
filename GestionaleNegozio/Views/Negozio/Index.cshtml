@model IEnumerable<GestionaleNegozio.Models.Negozio>

@{
    ViewData["Title"] = "Stores";
}

<h1>Stores Management</h1>

@if (User.IsInRole("Manager"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Store</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Regione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Città)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Regione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Città)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    @if (User.IsInRole("Manager"))
                    {
                        <span>|</span>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
