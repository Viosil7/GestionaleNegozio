@model GestionaleNegozio.Models.Negozio

@{
    ViewData["Title"] = "Create Store";
}

<h1>Crea Nuovo Negozio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Regione" class="control-label"></label>
                <select asp-for="Regione" class="form-control" id="regioneSelect">
                    <option value="">Seleziona una regione</option>
                    <option value="Lazio">Lazio</option>
                    <option value="Campania">Campania</option>
                </select>
                <span asp-validation-for="Regione" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Città" class="control-label"></label>
                <select asp-for="Città" class="form-control" id="cittaSelect">
                    <option value="">Seleziona prima una regione</option>
                </select>
                <span asp-validation-for="Città" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Indirizzo" class="control-label"></label>
                <input asp-for="Indirizzo" class="form-control" />
                <span asp-validation-for="Indirizzo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crea" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Torna all'elenco</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            const cities = {
                'Lazio': ['Roma', 'Latina', 'Frosinone', 'Viterbo', 'Rieti'],
                'Campania': ['Napoli', 'Salerno', 'Caserta', 'Avellino', 'Benevento']
            };

            $('#regioneSelect').change(function () {
                const selectedRegion = $(this).val();
                const cittaSelect = $('#cittaSelect');
                cittaSelect.empty();
                cittaSelect.append('<option value="">Seleziona una città</option>');

                if (selectedRegion) {
                    cities[selectedRegion].forEach(function (city) {
                        cittaSelect.append(`<option value="${city}">${city}</option>`);
                    });
                }
            });
        });
    </script>
}
