@model IEnumerable<GestionaleNegozio.Models.Ordine>

@{
    ViewData["Title"] = "Order Management";
}

<h1>Order Management</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Order</a>
    </p>


<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdNegozio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProdotto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantitaTotale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataOrdine)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdNegozio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProdotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantitaTotale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOrdine)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                <span>|</span>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <span>|</span>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
