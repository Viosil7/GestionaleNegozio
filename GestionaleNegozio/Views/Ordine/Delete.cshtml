@model GestionaleNegozio.Models.Ordine

@{
    ViewData["Title"] = "Delete Order";
    var negozio = ViewBag.Negozio as GestionaleNegozio.Models.Negozio;
    var prodotto = ViewBag.Prodotto as GestionaleNegozio.Models.Prodotto;
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Store
        </dt>
        <dd class="col-sm-10">
            @(negozio?.Città ?? "Unknown") - @(negozio?.Indirizzo ?? "")
        </dd>

        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @(prodotto?.Nome ?? "Unknown") - @(prodotto?.Prezzo.ToString("C") ?? "")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantitaTotale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantitaTotale)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nota)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataOrdine)
        </dt>
        <dd class="col-sm-10">
            @Model.DataOrdine.ToString("dd/MM/yyyy HH:mm")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
